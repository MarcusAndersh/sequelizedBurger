<h1>Burgers</h1>

<img src="burgerimg.jpg" style="width: 200px">
<h3>Eat Da Burger!!!</h3>

<ul style="margin: 0 50px 0 100px; display: inline-block; width: 400px">
  {{#each burgers}}
    {{#unless this.devoured}} 
      <li style="list-style-type: none; display: inline-block; margin: 10px 0">
        {{this.burger}}
        <form action="/{{this.id}}?_method=PUT" method="POST" style="float: right; margin: 0 10px">
          <input type="hidden" name="devoured" value="true">
          <input type="hidden" name="date_devoured" value="true">
          <button type="submit">Devour it!</button>
        </form>

      </li>
    {{/unless}}
  {{/each}}
</ul>

<ul style="margin: 0 100px 0 50px; display: inline-block">
      <h3>Burgers were devoured</h3>
  {{#each burgers}}
    {{#if this.devoured}}
      <li style="list-style-type: none; margin: 10px 0; background-color: gainsboro">
        {{this.burger}}

    {{/if}}
  {{/each}}
</ul>

<form class="create-update-form" action="/" method="POST" style="margin: 50px auto 50px">
  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger">
  </div>
  <button type="submit">Add Burger</button>
  <p>Enter the burger you want to eat then click the submit button</p>
</form>
